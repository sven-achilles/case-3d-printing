{% extends 'base.html.twig' %}

{% block title %}Edit 3D design{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/design-upload-toggle.css">
{% endblock %}

{% block javascripts %}
    <script src="/js/form-range.js"></script>
    <script src="/js/design-upload-toggle.js"></script>
{% endblock %}

{% block body %}
    <h2 id="page-title">Edit 3D design</h2>

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.material) }}
    {{ form_row(form.finish) }}
    {{ form_row(form.color) }}
    {{ form_row(form.polish) }}
    {{ form_row(form.width) }}
    {{ form_row(form.height) }}

    <div id="upload-new-file">
        <div class="form-group">
            <button type="button" class="btn btn-secondary btn-sm new">Upload new 3D file</button>
            <button type="button" class="btn btn-secondary btn-sm keep hide">Keep old 3D file</button>

            <div class="upload-form hide">
                {{ form_label(form.design) }}
                {{ form_widget(form.design) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}